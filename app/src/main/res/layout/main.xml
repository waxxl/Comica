<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/videos"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/main_gallery"
            android:onClick="buttonClicked"
            android:text=""
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/camera"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/main_camera"
            android:onClick="buttonClicked"
            android:text=""
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/multi"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/main_multi"
            android:onClick="buttonClicked"
            android:text=""
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:id="@+id/shop"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_gravity="bottom|right|center_vertical|center_horizontal|center"
        android:layout_margin="2dp"
        android:background="@drawable/sale2"
        android:onClick="buttonClicked"
        android:text=""
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/settings"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|left|center_vertical|center_horizontal|center"
        android:layout_margin="2dp"
        android:onClick="buttonClicked"
        android:text=""
        android:textColor="#ffffff"
        android:textStyle="bold" />
</FrameLayout>
